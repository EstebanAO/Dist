program factRecursive;

fun factorial(a:int) : int {
    if (a == 0) {
        return 1;
    }
    else {
        return a * factorial(a - 1);
    };
}

main {
    var fact : int;
    print("Ingresa el numero para obtener su factorial recursivamente: ");
    read(fact);
    println("El factorial de ", fact, " es: ", factorial(fact));
}
